<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/task2Qwestion"
        android:text="@string/task2"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/firstBox"
        android:layout_below="@+id/task2Qwestion"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/logicAND"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/logicOR"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/logicIF"/>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/task2Qwestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/firstBox"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/targetBox1"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/box1"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:background="#FFEB3B"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/targetBox2"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/box2"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:background="#FFEB3B"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/targetBox3"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/box3"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:background="#FFEB3B"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/target2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/and"
            android:text="@string/anD"
            android:layout_width="30dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/or"
            android:text="@string/oR"
            android:layout_width="30dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/ifl"
            android:text="@string/arrowLeft"
            android:layout_width="30dp"
            android:layout_height="15dp" />

    </LinearLayout>


    <Button
        android:id="@+id/nextBut2"
        android:text="@string/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>