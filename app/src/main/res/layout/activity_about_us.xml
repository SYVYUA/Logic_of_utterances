<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".aboutCreators.AboutUs">

    <RelativeLayout
        android:id="@+id/forprepod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/prepod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/employee"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/nameprepod"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prepod"
            android:layout_centerHorizontal="true"
            android:text="@string/name_prepod"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameprepod"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/status_prepod"
            />

    </RelativeLayout>
    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/forprepod"/>

    <RelativeLayout
        android:id="@+id/forme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space">

        <ImageView
            android:id="@+id/develop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/employee"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/namedevelop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/develop"
            android:layout_centerHorizontal="true"
            android:text="@string/my_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namedevelop"
            android:layout_centerHorizontal="true"
            android:text="@string/my_status"
            />

    </RelativeLayout>


</RelativeLayout>