<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".learning.LearningActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">


    <Button
        android:id="@+id/lesson_1"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/gradient_for_button"
        android:text="@string/firstLesson"/>

    <Space
        android:id="@+id/spaceOne"

        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/lesson_2"
        android:layout_width="250dp"
        android:layout_height="150dp"


        android:background="@drawable/gradient_for_button"
        android:text="@string/secondLesson"/>

</LinearLayout>



</RelativeLayout>